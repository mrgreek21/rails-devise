<h3>Event</h3>
<p>Name: <%= @event.name if @event.name %></p>
<p>Email: <%= @event.host.user.email if @event.host.user.email %></p>
<%- if @event.seating_plan %>
	<p>Seating Plan Info: <%= @event.seating_plan.num_tables %> table(s). </p>
<% else %>
	<p><%= link_to 'Add a Seating Plan', :controller => 'seating_plans', :action => 'new', :event_id => @event.id %></p>
<% end -%>